<main>
    <div class="container">
        <div class="row mt-3">
            <div class="col">
                <p class="lead">Order Confirmation</p>
            </div>
        </div>
        {{#if hasError}}
        <div class="row mt-3">
            <div class="col">
                <p class="text-danger">Failed to submit order!</p>
                <p class="text-danger">Error message: <strong>{{ error }}</strong></p>
            </div>
        </div>
        {{else}}
        <div class="row mt-3">
            <div class="col">
                <p>Order is submitted successfully for Customer Id: "{{ custId }}"!</p>
                <p></p>
            </div>
        </div>
        {{/if}}
    </div>
</main>